@model Day3_WebApplication.Models.Person

@{
    ViewBag.Title = "Person";
    var ajaxOptions = new AjaxOptions
    {
        HttpMethod = "Post",
        OnSuccess = "success",
    };
}

@section NavbarSection{
    @{ var navbarStyle = Model.Faction ? "navbar-inverse" : ""; } 
    <div class="navbar @navbarStyle" id="navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Create New", "Create", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
}

@Html.Partial("HeaderPerson", Model)

<h3 class="orange">@Model.Name</h3>

@section FooterSection{  
    <h4>Join other side Yes/No</h4>
    @Ajax.ActionLink("Yes", "Change", new { id = Model.Id }, ajaxOptions, new { @class = "btn btn-primary", @id = "switchButton" })
}
<script src="~/Scripts/CustomScripts/LayoutScript.js"></script>

