@model IEnumerable<Task3_ViewEngine.Models.Person>

@{
    ViewBag.Title = "PersonsList";
}

<h2>PersonsList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FactionName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FactionName)
        </td>
        <td>
            @Html.ActionLink("Details", "Person", new { id=item.Id })
        </td>
    </tr>
}

</table>
